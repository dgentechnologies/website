{
  "entities": {
    "blogPost": {
      "title": "Blog Post",
      "description": "Represents a single blog post entry.",
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "description": "The title of the blog post."
        },
        "description": {
          "type": "string",
          "description": "A short meta description for the blog post."
        },
        "slug": {
          "type": "string",
          "description": "The URL-friendly slug for the blog post."
        },
        "author": {
          "type": "string",
          "description": "The name of the author."
        },
        "date": {
          "type": "string",
          "format": "date",
          "description": "The publication date."
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Relevant tags for the blog post."
        },
        "content": {
          "type": "string",
          "description": "The full content of the blog post, formatted as HTML."
        },
        "image": {
          "type": "string",
          "format": "uri",
          "description": "URL for a relevant hero image for the blog post."
        },
        "imageHint": {
          "type": "string",
          "description": "Two-word hint for the image content, e.g., 'technology abstract'."
        }
      },
      "required": ["title", "description", "slug", "author", "date", "content", "image", "imageHint"]
    },
    "contactMessage": {
      "title": "Contact Message",
      "description": "Represents a message submitted through the contact form.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The sender's name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The sender's email address."
        },
        "subject": {
          "type": "string",
          "description": "The subject of the message."
        },
        "message": {
          "type": "string",
          "description": "The content of the message."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the message was submitted."
        }
      },
      "required": ["name", "email", "subject", "message", "createdAt"]
    }
  },
  "auth": {
    "providers": ["anonymous"]
  },
  "firestore": {
    "/blogPosts/{postId}": {
      "schema": {
        "$ref": "#/entities/blogPost"
      },
      "description": "Stores individual blog post documents."
    },
    "/contactMessages/{messageId}": {
      "schema": {
        "$ref": "#/entities/contactMessage"
      },
      "description": "Stores messages submitted through the contact form."
    }
  }
}
